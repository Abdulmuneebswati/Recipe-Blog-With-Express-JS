        </div>
    </div>

</div>


{{!-- Categories Start--}}
<div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">
    
    {{#each  category}}
    <a href="/categories/{{this.name}}" class="col text-center category__link" >
        <div class="category__img shadow">
            <img src="img/{{this.image}}" alt="american-food" loading="lazy" >
        </div>
        <div class="pt-1">{{this.name}}</div>
    </a>
    {{/each}}

    <a href="/categories" class="col text-center category__link" >
        <div class="category__img  shadow">
            <img src="img/viewall.jpg" alt="View all" loading="lazy" >
        </div>
        <div class="pt-1">View All</div>
    </a>
</div>
{{!-- Categories End--}}


